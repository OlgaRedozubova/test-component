{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es5",
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "declaration": false,
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": [
            "index.d.ts",
            "node_modules/@types"
        ]
    },
    "filesGlob" : [
        "./index.d.ts"
    ],
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}